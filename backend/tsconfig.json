{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es5", "es6", "ES2018"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
  },
  "include": ["*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "files": true
  },
  "ts-loader": {
    "compiler": "@swc/core"
  }
}